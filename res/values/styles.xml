<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- <item name="android:windowBackground">@drawable/init</item> -->
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.YOUZI">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.WUZI">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.UMDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Listview_Nodiv">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:cacheColorHint">@null</item>
    </style>

    <style name="Translucent_Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>


    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="Mypd" parent="@android:style/Theme.Dialog">
        <item name="android:alertDialogStyle">@style/CustomDialogStyle</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="CustomDialogStyle">
        <item name="android:bottomBright">@color/colorPrimaryDark</item>
        <item name="android:bottomDark">@color/colorPrimaryDark</item>
        <item name="android:bottomMedium">@color/colorPrimaryDark</item>
        <item name="android:centerBright">@color/colorPrimaryDark</item>
        <item name="android:centerDark">@color/colorPrimaryDark</item>
        <item name="android:centerMedium">@color/colorPrimaryDark</item>
        <item name="android:fullBright">@color/colorPrimaryDark</item>
        <item name="android:fullDark">@color/colorPrimaryDark</item>
        <item name="android:topBright">@color/colorPrimaryDark</item>
        <item name="android:topDark">@color/colorPrimaryDark</item>
    </style>

</resources>
