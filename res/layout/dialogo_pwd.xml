<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#86222222">

    <LinearLayout
        android:id="@+id/setting_pass_layout_pwd"
        android:layout_width="500dp"
        android:layout_height="320dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@android:color/transparent">

            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:background="@drawable/setting_circle_bg" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:background="@android:color/white">

                <ImageView
                    android:id="@+id/setting_pass_close_pwd"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/home2_setting_dialog_close" />
            </RelativeLayout>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="66dp"
                android:layout_gravity="center"
                android:src="@drawable/home2_setting_dialog_lock" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title_pass_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="#fff5f5f5"
                    android:enabled="false"
                    android:gravity="center"
                    android:text="@string/old_pass"
                    android:textColor="#ff333333"
                    android:textSize="26dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@android:color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginStart="20dp"
                    android:background="#fff5f5f5"
                    android:enabled="false"
                    android:gravity="center"
                    android:text="@string/hint_pw_operario"
                    android:textColor="#ff333333"
                    android:textSize="24dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/setting_pass_new_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginEnd="20dp"
                    android:background="#fff5f5f5"
                    android:gravity="center"
                    android:inputType="numberPassword"
                    android:maxLength="6"
                    android:textColor="#ff333333"
                    android:textSize="22dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@android:color/white">
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>