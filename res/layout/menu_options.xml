<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:id="@+id/menuOptions"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:background="@color/white"
        android:layout_width="105dp"
        android:layout_height="500dp"
        android:layout_alignParentEnd="true"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center">
            <LinearLayout
                android:id="@+id/configuracion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/ic_configuracion"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Configuración"
                    android:textSize="13sp"
                    android:textColor="#454447"/>
            </LinearLayout>
            <TextView
                android:layout_margin="10dp"
                android:layout_width="80dp"
                android:layout_height="1dp"
                android:background="@color/cardview_shadow_start_color"/>
            <LinearLayout
                android:id="@+id/datosdered"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/comunication"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Datos de red"
                    android:textSize="13sp"
                    android:textColor="#454447"/>
            </LinearLayout>
            <TextView
                android:layout_margin="10dp"
                android:layout_width="80dp"
                android:layout_height="1dp"
                android:background="@color/cardview_shadow_start_color"/>
            <LinearLayout
                android:id="@+id/resumentrans"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/ic_menuimpresion"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Resumen de Transacciones"
                    android:textColor="#454447"
                    android:textSize="13sp" />
            </LinearLayout>
            <TextView
                android:layout_margin="10dp"
                android:layout_width="80dp"
                android:layout_height="1dp"
                android:background="@color/cardview_shadow_start_color"/>
            <LinearLayout
                android:id="@+id/inicializacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/ic_polariscloudcolor"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Inicialización"
                    android:textSize="13sp"
                    android:textColor="#454447"/>
            </LinearLayout>
            <TextView
                android:layout_margin="10dp"
                android:layout_width="80dp"
                android:layout_height="1dp"
                android:background="@color/cardview_shadow_start_color"/>
            <LinearLayout
                android:id="@+id/actualizacionremota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/ic_actualizacion_remota"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Actualización remota"
                    android:textSize="13sp"
                    android:textColor="#454447"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>