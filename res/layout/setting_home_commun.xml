<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/tv_timeout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="@string/wait_connect_time"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/setting_com_timeout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/tv_timeout"
            android:layout_marginEnd="25dp"
            android:layout_marginStart="4dp"
            android:background="@android:color/transparent"
            android:gravity="right"
            android:inputType="number"
            android:maxLength="2"
            android:paddingTop="15dp"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtTimeout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/tv_timeout"
            android:layout_marginEnd="25dp"
            android:layout_marginStart="4dp"
            android:background="@android:color/transparent"
            android:gravity="right"
            android:maxLength="6"
            android:paddingTop="15dp"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/tvtIp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="@string/public_network_ip"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_toEndOf="@+id/tvtIp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="25dp"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/etIp1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:textSize="21sp"
                android:imeOptions="actionNext"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="number"
                android:textColor="@color/black"
                android:maxLength="3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="." />

            <EditText
                android:id="@+id/etIp2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:textSize="21sp"
                android:imeOptions="actionNext"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="number"
                android:textColor="@color/black"
                android:maxLength="3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="." />

            <EditText
                android:id="@+id/etIp3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:textSize="21sp"
                android:imeOptions="actionNext"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="number"
                android:textColor="@color/black"
                android:maxLength="3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="." />

            <EditText
                android:id="@+id/etIp4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:textSize="21sp"
                android:imeOptions="actionNext"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="number"
                android:textColor="@color/black"
                android:maxLength="3"/>

        </LinearLayout>

        <LinearLayout
            android:layout_toEndOf="@+id/tvtIp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="25dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvIp1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:paddingTop="15dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tvIp2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:paddingTop="15dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tvIp3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:paddingTop="15dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tvIp4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:paddingTop="15dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_weight="1"/>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/tvtPuerto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="@string/public_network_port"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/setting_com_public_port"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/tvtPuerto"
            android:layout_marginEnd="25dp"
            android:layout_marginStart="44dp"
            android:background="@android:color/transparent"
            android:gravity="right"
            android:inputType="number"
            android:maxLength="6"
            android:paddingTop="15dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:imeOptions="actionNext"/>

        <TextView
            android:id="@+id/txtPuerto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/tvtPuerto"
            android:layout_marginEnd="25dp"
            android:layout_marginStart="44dp"
            android:background="@android:color/transparent"
            android:gravity="right"
            android:maxLength="6"
            android:paddingTop="15dp"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_termID_comm"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:background="#FFFFFF"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_ter_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="@string/terminal_id"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/merchant_tid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="25dp"
            android:layout_marginStart="53dp"
            android:layout_toEndOf="@id/tv_ter_id"
            android:background="@android:color/transparent"
            android:gravity="right"
            android:inputType="textCapCharacters"
            android:maxLength="8"
            android:paddingTop="15dp"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:imeOptions="actionNext" />

        <TextView
            android:id="@+id/txtTerminal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/tv_ter_id"
            android:layout_marginEnd="25dp"
            android:layout_marginStart="53dp"
            android:background="@android:color/transparent"
            android:gravity="right"
            android:maxLength="6"
            android:paddingTop="15dp"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:background="#FFFFFF"
        android:visibility="visible">

        <TextView
            android:id="@+id/tvtNii"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="@string/title_nii"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/setting_com_nii"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/tvtNii"
            android:layout_marginEnd="25dp"
            android:layout_marginStart="130dp"
            android:background="@android:color/transparent"
            android:gravity="right"
            android:inputType="number"
            android:maxLength="3"
            android:paddingTop="15dp"
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/txtNii"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/tvtNii"
            android:layout_marginEnd="25dp"
            android:layout_marginStart="130dp"
            android:background="@android:color/transparent"
            android:gravity="right"
            android:maxLength="6"
            android:paddingTop="15dp"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"
        android:visibility="invisible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:text="@string/intentos_de_conex"
            android:textColor="#ff333333"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/setting_com_intentos_de_conex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="2"
            android:paddingTop="15dp"
            android:textColor="#000000"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"
        android:visibility="invisible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:text="@string/timeout_resp"
            android:textColor="#ff333333"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/setting_com_timeout_resp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:gravity="right"
            android:inputType="number"
            android:maxLength="2"
            android:paddingTop="15dp"
            android:textColor="#000000"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>