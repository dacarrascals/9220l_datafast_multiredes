<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/setting_root"
    android:background="#eeeeee"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_height="55dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:gravity="center"
        android:text="@string/app_setting"
        android:layout_width="match_parent"/>
    <ListView
        android:id="@+id/setting_listview"
        android:layout_marginTop="20dp"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/setting_maintain_layout"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:layout_marginTop="20dp"
        android:layout_height="45dp"
        android:visibility="invisible">
        <ImageView
            android:src="@drawable/home2_setting_maintain"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_width="25dp"
            android:layout_height="25dp" />
        <TextView
            android:layout_marginLeft="20dp"
            android:text="@string/modify_maintain_pass"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_alignParentRight="true"
                android:src="@drawable/home2_setting_next"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="10dp"
                android:paddingTop="15dp"
                android:layout_width="25dp"
                android:layout_height="25dp" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/setting_android_layout"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:layout_marginTop="20dp"
        android:layout_height="45dp"
        android:visibility="invisible">
        <ImageView
            android:src="@drawable/home2_setting_android"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_width="25dp"
            android:layout_height="25dp" />
        <TextView
            android:layout_marginLeft="20dp"
            android:text="@string/android_setting"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_alignParentRight="true"
                android:src="@drawable/home2_setting_next"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="10dp"
                android:paddingTop="15dp"
                android:layout_width="25dp"
                android:layout_height="25dp" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/setting_errlog_layout"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:layout_marginTop="20dp"
        android:layout_height="45dp"
        android:visibility="invisible">
        <ImageView
            android:src="@drawable/home2_setting_errlog"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_width="25dp"
            android:layout_height="25dp" />
        <TextView
            android:layout_marginLeft="20dp"
            android:text="@string/errlog_list"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_alignParentRight="true"
                android:src="@drawable/home2_setting_next"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="10dp"
                android:paddingTop="15dp"
                android:layout_width="25dp"
                android:layout_height="25dp" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/setting_advice_layout"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:layout_marginTop="20dp"
        android:layout_height="45dp"
        android:visibility="invisible">
        <ImageView
            android:src="@drawable/home2_setting_advice"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_width="25dp"
            android:layout_height="25dp" />
        <TextView
            android:layout_marginLeft="20dp"
            android:text="@string/feedback_advice"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_alignParentRight="true"
                android:src="@drawable/home2_setting_next"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="10dp"
                android:paddingTop="15dp"
                android:layout_width="25dp"
                android:layout_height="25dp" />
        </RelativeLayout>
    </LinearLayout>


    <GridView
        android:id="@+id/setting_gridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:cacheColorHint="#00000000"
        android:visibility="gone"
        android:columnWidth="150dp"
        android:scrollbars="none"
        android:horizontalSpacing="20dp"
        android:listSelector="@android:color/transparent"
        android:numColumns="2"
        android:verticalSpacing="40dp" />
</LinearLayout>