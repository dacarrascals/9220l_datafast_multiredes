<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#86222222">

    <LinearLayout
        android:id="@+id/setting_pass_layout"
        android:layout_width="380dp"
        android:layout_height="270dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="115dp"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="330dp"
            android:layout_height="220dp"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:background="@drawable/ic_wave2"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/icono"
                            android:layout_width="50dp"
                            android:layout_height="56dp"
                            android:layout_marginLeft="20dp"
                            android:src="@drawable/ic_lock" />
                        <ImageView
                            android:id="@+id/setting_pass_close"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignParentEnd="true"
                            android:padding="15dp"
                            android:src="@drawable/home2_setting_dialog_close" />
                    </RelativeLayout>

                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/title_pass"
                        android:layout_width="261dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="20dp"
                        android:enabled="false"
                        android:gravity="center"
                        android:text="@string/old_pass"
                        android:textColor="#ff333333"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/setting_pass_old"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="20dp"
                        android:background="#fff5f5f5"
                        android:gravity="center"
                        android:inputType="numberPassword"
                        android:maxLength="8"
                        android:textColor="#ff333333"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:background="@android:color/white"
                    android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:enabled="false"
                            android:gravity="center"
                            android:text="@string/hint_pw_operario"
                            android:textColor="#ff333333"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/setting_pass_new"
                            android:layout_width="148dp"
                            android:layout_height="40dp"
                            android:background="@color/white"
                            android:gravity="center"
                            android:inputType="numberPassword"
                            android:maxLength="6"
                            android:textColor="#ff333333"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                        <ToggleButton
                            android:id="@+id/ivShowHidePass"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:text=""
                            android:textOff=""
                            android:textOn=""
                            android:elevation="@dimen/dp_10"
                            android:background="@drawable/ic_invisible">
                        </ToggleButton>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white">

                    <Button
                        android:id="@+id/setting_pass_confirm"
                        android:layout_width="130dp"
                        android:layout_height="40dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/btn_blue_shape"
                        android:text="@string/confirm"
                        android:textColor="#ffffffff"
                        android:textSize="18sp" />
                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</RelativeLayout>