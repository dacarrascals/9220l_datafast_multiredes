<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:paddingBottom="20dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="流水号"
                            android:textColor="@color/black"
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <EditText
                            android:id="@+id/setting_trans_trace_edit"
                            android:imeOptions="actionNext"
                            android:paddingLeft="5dp"
                            android:inputType="number"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/edittext_selector"
                            android:layout_width="150dp"
                            android:layout_height="35dp" />

                        <TextView
                            android:text="打印联数"
                            android:textColor="@color/black"
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <Spinner
                            android:id="@+id/setting_trans_print_spinner"
                            android:background="@drawable/edittext_selector"
                            android:layout_marginTop="20dp"
                            android:layout_width="150dp"
                            android:layout_height="35dp"
                            android:paddingLeft="5dp"/>

                        <TextView
                            android:text="TPDU头"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <EditText
                            android:id="@+id/setting_trans_tupu_edit"
                            android:imeOptions="actionNext"
                            android:paddingLeft="5dp"
                            android:inputType="number"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/edittext_selector"
                            android:layout_width="150dp"
                            android:layout_height="35dp" />

                        <TextView
                            android:text="交易结果退出时间(单位：S)"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <Spinner
                            android:id="@+id/setting_trans_exit_time"
                            android:background="@drawable/edittext_selector"
                            android:layout_marginTop="20dp"
                            android:layout_width="150dp"
                            android:layout_height="35dp"
                            android:paddingLeft="5dp"/>

                        <TextView
                            android:text="等待用户交互时间(单位：S)"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <Spinner
                            android:id="@+id/setting_trans_wait_user_time"
                            android:background="@drawable/edittext_selector"
                            android:layout_marginTop="20dp"
                            android:layout_width="150dp"
                            android:layout_height="35dp"
                            android:paddingLeft="5dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="批次号"
                            android:textColor="@color/black"
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <EditText
                            android:id="@+id/setting_trans_batch_edit"
                            android:imeOptions="actionNext"
                            android:paddingLeft="5dp"
                            android:inputType="number"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/edittext_selector"
                            android:layout_width="150dp"
                            android:layout_height="35dp" />

                        <TextView
                            android:text="商行代码"
                            android:textColor="@color/black"
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <EditText
                            android:id="@+id/setting_trans_firm_edit"
                            android:imeOptions="actionNext"
                            android:paddingLeft="5dp"
                            android:inputType="number"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/edittext_selector"
                            android:layout_width="150dp"
                            android:layout_height="35dp" />

                        <TextView
                            android:text="是否磁道加密"
                            android:textColor="@color/black"
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <Spinner
                            android:id="@+id/setting_trans_track_encrypt"
                            android:paddingLeft="5dp"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/edittext_selector"
                            android:layout_width="150dp"
                            android:layout_height="35dp" />

                        <TextView
                            android:text="冲正次数设置"
                            android:textColor="@color/black"
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <EditText
                            android:id="@+id/setting_trans_reversal_count"
                            android:paddingLeft="5dp"
                            android:inputType="number"
                            android:maxLength="1"
                            android:text="3"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/edittext_selector"
                            android:layout_width="150dp"
                            android:layout_height="35dp" />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:layout_height="wrap_content">
            <include
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                layout="@layout/setting_frag_bottom"/>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>
